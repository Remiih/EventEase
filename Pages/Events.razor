@page "/events"
@using EventEase.Models
@using EventEase.Shared

<h1>Event List</h1>

<div class="row">
    @foreach (var eventItem in Eventss)
    {
        <div class="col-md-6">
            <EventCard Event="eventItem" />
        </div>
    }
</div>

@code {
    private List<Event> Eventss = new List<Event>();

    protected override void OnInitialized()
    {
        // Replace with your actual data loading logic
        Eventss = new List<Event>
{
new Event { Id = 1, Title = "Event One", Description = "Stinki event", Date =
DateTime.Now.AddDays(7), Location = "Online" },
new Event { Id = 2, Title = "Event Two", Description = "Learn about the new stinki event.", Date =
DateTime.Now.AddDays(14), Location = "Online" }
};
    }
}
